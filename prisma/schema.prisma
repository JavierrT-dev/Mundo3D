datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL") // Aseg√∫rate de tener esta variable de entorno en tu archivo .env
}

generator client {
  provider = "prisma-client-js"
}

model user {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     String @default("user") // "user" por defecto, pero "admin" para administradores
}



model Message {
  id        Int      @id @default(autoincrement())
  name      String
  message   String
  createdAt DateTime @default(now())
}
